<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>BlackJackWebService</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>server.servlets.blackjack.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameServlet</servlet-name>
        <servlet-class>server.servlets.blackjack.GameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GamesListServlet</servlet-name>
        <servlet-class>server.servlets.blackjack.GamesListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateGameServlet</servlet-name>
        <servlet-class>server.servlets.blackjack.CreateGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TesterServlet</servlet-name>
        <servlet-class>server.servlets.blackjack.TesterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>server.servlets.blackjack.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlackJackWebService</servlet-name>
        <url-pattern>/BlackJackWebService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameServlet</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GamesListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateGameServlet</servlet-name>
        <url-pattern>/createGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TesterServlet</servlet-name>
        <url-pattern>/tester</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>40</session-timeout>
        <cookie-config>
            <http-only>false</http-only>
        </cookie-config>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
</web-app>
